@model APP_MVC_Datos.Model.TB_Producto

@{
    ViewBag.Title = "Admin - Eliminar Producto";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Borrado de Productos</h2>

<h3>Estas seguro que quieres eliminar esta categoría?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <strong>Nombre de Producto</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomProd)
        </dd>

        <dt>
            <strong>Precio</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt>
            <strong>Descripcion</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            <strong>Imagen</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.foto)
        </dd>

        <dt>
            <strong>Stock</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.stock)
        </dd>

        <dt>
            <strong>Categoría</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TB_Categoria.nomCategoria)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver a la lista", "Index",null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
